{
  "name": "json-smart-viewer",
  "displayName": "JSON Smart Viewer",
  "description": "An interactive, collapsible tree viewer for JSON files.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "json-smart-viewer.show",
        "title": "JSON Smart View"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == json",
          "command": "json-smart-viewer.show",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1"
  }
}
